<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-5 shadow">
        <h3>Create a new pet profile</h3>
        <%= simple_form_for @pet do |f| %>
          <%= f.input :name %>
          <%= f.input :species %>
          <%= f.input :breed %>
          <%= f.input :description %>
          <%= f.input :photos, as: :file, input_html: { multiple: true } %>
          <%= f.submit class: 'btn btn-flat' %>
          <button class="my-button"><%= link_to 'Back', pets_path %></button>
        <% end %>
      </div>
    </div>
  </div>
</div>
